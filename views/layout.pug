        title Knowledge Base
    body
        nav.navbar.sticky-top.navbar-expand-lg.navbar-dark.bg-dark
            .container
                a.navbar-brand(href='#')
                    i.fas.fa-bookmark
                    |  Knowledge Base 
                button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarSupportedContent.collapse.navbar-collapse
                    ul.navbar-nav.ml-auto
                        li.nav-item.active
                            a.nav-link(href='/') Home
                        if user
                            li.nav-item
                                a.nav-link(href='/article/add') Add Article
                            li.nav-item
                                a.nav-link(href='/user/' + user.username + '?user-id=' + user.id) My Account
                            li.nav-item
                                a.nav-link(href='/user/logout') Logout
                        else
                            li.nav-item
                                a.nav-link(href='/user/register') Register
                            li.nav-item
                                a.nav-link(href='/user/login') Login
        main
            .container
                != messages('message', locals)
                block content
                br
        footer(class="bg-dark")
            .container
